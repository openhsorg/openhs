    <!-- Sample Thing Type -->
    <thing-type id="sample">
        <label>IQRF Binding Thing</label>
        <description>Sample thing for IQRF Binding</description>

        <channels>
            <channel id="channel1" typeId="sample-channel"/>
            <channel id="temperature" typeId="temperature" />
        </channels>
    </thing-type>

